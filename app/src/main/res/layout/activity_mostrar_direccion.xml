<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ImageView para mostrar la imagen del restaurante -->
        <ImageView
            android:id="@+id/imagenRestauranteView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:src="@drawable/mapa"/>

        <!-- TextView para mostrar la información del restaurante -->
        <TextView
            android:id="@+id/infoRestauranteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:text="Información del Restaurante" />

        <!-- WebView para mostrar el mapa satelital -->
        <WebView
            android:id="@+id/mapaWebView"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>
    </LinearLayout>
</ScrollView>
