<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Imagen del avión con bordes redondeados -->

    <!-- Botón de exploración -->

    <!-- Texto descriptivo -->

    <!-- Texto adicional -->

    <ImageView
        android:id="@+id/planeImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="333dp"
        android:background="@drawable/rounded_corners"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/inicio" />

    <Button
        android:id="@+id/exploreButton"
        android:layout_width="223dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="93dp"
        android:layout_marginTop="390dp"
        android:layout_marginEnd="95dp"
        android:background="@drawable/boton_personalizado"
        android:text=">>>"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exploreButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="31dp"
        android:fontFamily="@font/fuente2"
        android:text="Explora el Perú con nosotros"
        android:textColor="#000000"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/extraText"
        android:layout_width="245dp"
        android:layout_height="62dp"
        android:layout_below="@+id/descriptionText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="34dp"
        android:fontFamily="@font/fuente1"
        android:text="Conéctate con el viaje aquí"
        android:textColor="@color/azul"
        android:textSize="20sp" />

</RelativeLayout>
